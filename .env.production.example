# Production Environment Configuration
# DO NOT commit this file to version control

# Database
DATABASE_URL="postgresql://user:password@host:5432/lexicon_production"

# JWT Secret (CRITICAL: Generate with: openssl rand -base64 32)
JWT_SECRET="REPLACE-WITH-SECURE-RANDOM-STRING"

# Node Environment
NODE_ENV="production"

# Server Configuration
PORT=3000
HOST="0.0.0.0"

# File Upload Configuration
MAX_FILE_SIZE="52428800" # 50MB
UPLOAD_DIR="/app/uploads"
ALLOWED_FILE_TYPES="txt,pdf,docx,doc,xlsx,xls,epub"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="60000"
RATE_LIMIT_MAX="100"

# API Configuration
API_TIMEOUT="30000"

# Logging
LOG_LEVEL="warn"

# Security
BCRYPT_ROUNDS="12"
SESSION_EXPIRY="7d"

# Application URL
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# Feature Flags
NEXT_PUBLIC_ENABLE_REGISTRATION="true"
NEXT_PUBLIC_ENABLE_EXPORT="true"
NEXT_PUBLIC_ENABLE_LEARNING="true"

# Monitoring (Recommended for production)
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project"
# SENTRY_ENV="production"

# Email Configuration (if using email features)
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT="587"
# SMTP_USER="apikey"
# SMTP_PASS="your-sendgrid-api-key"
# SMTP_FROM="noreply@your-domain.com"
