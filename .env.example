# Environment Variables Template
# Copy this file to .env.local and fill in the actual values

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/lexicon_master"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRE="7d"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3000"
API_PORT=3000

# Node Environment
NODE_ENV="development"

# File Upload Configuration
MAX_FILE_SIZE="52428800"
MAX_FILES_PER_SESSION="20"
UPLOAD_DIRECTORY="./uploads"
TEMP_DIRECTORY="./temp"

# Supported File Types
SUPPORTED_FILE_TYPES="pdf,docx,doc,txt,xlsx,xls,epub"

# Redis Configuration (Optional)
REDIS_URL="redis://localhost:6379"
REDIS_ENABLED="false"

# Word Enrichment API Keys
WORD_API_KEY="your-wordnik-api-key"
DICTIONARY_API_URL="https://api.dictionaryapi.dev/api/v2"

# Processing Configuration
MAX_CONCURRENT_FILE_PROCESSING="5"
OCR_ENABLED="false"
OCR_CONFIDENCE_THRESHOLD="0.7"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Analytics & Monitoring
SENTRY_DSN="your-sentry-dsn-url"
ENABLE_ANALYTICS="false"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Storage Configuration
STORAGE_PROVIDER="local"
STORAGE_PATH="./uploads"

# Feature Flags
ENABLE_LEARNING_MODE="true"
ENABLE_EXPORT_PDF="true"
ENABLE_EXPORT_EXCEL="true"
ENABLE_EXPORT_CSV="true"
ENABLE_WORD_ENRICHMENT="true"
ENABLE_MULTILINGUAL="true"
